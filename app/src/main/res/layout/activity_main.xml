<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111827"
    android:scrollbars="none"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- WhatsApp Logo -->
        <ImageView
            android:id="@+id/whatsappLogo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_whatsapp_logo"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setup Your Assistant"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your API keys to get started"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- Gemini API Key -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/geminiApiLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gemini API Key"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/geminiApiKey"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your Gemini API Key"
                android:background="@drawable/edit_text_border"
                android:drawableStart="@drawable/ic_key"
                android:drawablePadding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="48dp"
                android:layout_below="@id/geminiApiLabel"
                android:layout_alignParentStart="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:textSize="14sp"

                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"
                />

            <ImageView
                android:id="@+id/geminiInfoIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:layout_alignTop="@id/geminiApiKey"
                android:layout_alignBottom="@id/geminiApiKey" />

        </RelativeLayout>

        <!-- Deepgram API Key -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/deepgramApiLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deepgram API Key"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/deepgramApiKey"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your Deepgram API Key"
                android:background="@drawable/edit_text_border"
                android:drawableStart="@drawable/ic_microphone"
                android:drawablePadding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="48dp"
                android:layout_below="@id/deepgramApiLabel"
                android:layout_alignParentStart="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:textSize="14sp"

                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"
                />

            <ImageView
                android:id="@+id/deepgramInfoIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:layout_alignTop="@id/deepgramApiKey"
                android:layout_alignBottom="@id/deepgramApiKey" />

        </RelativeLayout>

        <!-- ElevenLabs API Key -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/elevenApiLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ElevenLabs API Key"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/elevenApiKey"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your ElevenLabs API Key"
                android:background="@drawable/edit_text_border"
                android:drawableStart="@drawable/ic_speaker"
                android:drawablePadding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="48dp"
                android:layout_below="@id/elevenApiLabel"
                android:layout_alignParentStart="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:textSize="14sp"

                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"
                />

            <ImageView
                android:id="@+id/elevenInfoIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:layout_alignTop="@id/elevenApiKey"
                android:layout_alignBottom="@id/elevenApiKey" />

        </RelativeLayout>

        <!-- ElevenLabs Voice ID -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/elevenVoiceLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ElevenLabs Voice ID"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/elevenVoiceId"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your ElevenLabs Voice ID"
                android:background="@drawable/edit_text_border"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="48dp"
                android:layout_below="@id/elevenVoiceLabel"
                android:layout_alignParentStart="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/voiceInfoIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:layout_alignTop="@id/elevenVoiceId"
                android:layout_alignBottom="@id/elevenVoiceId" />

        </RelativeLayout>

        <!-- Google Sheets ID -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/sheetsIdLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Sheets ID"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/sheetsId"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your Google Sheets ID"
                android:background="@drawable/edit_text_border"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="48dp"
                android:layout_below="@id/sheetsIdLabel"
                android:layout_alignParentStart="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:textSize="14sp"

                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"
                />

            <ImageView
                android:id="@+id/sheetsInfoIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:layout_alignTop="@id/sheetsId"
                android:layout_alignBottom="@id/sheetsId" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/promptDropdownLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_robot"
                android:text="Personality Prompt"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/promptDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/promptDropdownLabel"
                android:background="@drawable/spinner_background"
                android:dropDownVerticalOffset="48dp"
                android:popupBackground="#1E1E2F"
                android:spinnerMode="dropdown"
                android:textAlignment="viewStart" />

        </RelativeLayout>

        <!-- Prompt -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/promptLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prompt (Assistant's Vibe)"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/promptEditText"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/promptLabel"
                android:layout_marginTop="8dp"
                android:gravity="top|start"
                android:inputType="textMultiLine|textCapSentences"
                android:overScrollMode="always"
                android:scrollbars="vertical|horizontal"
                android:maxLines="10"
                android:minLines="3"
                android:focusableInTouchMode="true"
                android:background="@drawable/edit_text_border"
                android:textColor="#888888"
                android:padding="12dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/continueLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_gradient"
            android:padding="14dp"
            android:layout_marginTop="8dp">

            <!-- Default Content -->
            <LinearLayout
                android:id="@+id/continueContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/arrowIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/continueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue to Setup"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- Loading Spinner and Text -->
            <LinearLayout
                android:id="@+id/loadingLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/loadingSpinner"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:indeterminate="true"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/loadingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please wait..."
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
