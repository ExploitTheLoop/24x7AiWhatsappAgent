<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_rounded"
    android:padding="16dp"
    android:clipToOutline="true">

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="16dp">

<TextView
    android:id="@+id/dialogTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Get Deepgram API Key"
    android:textColor="#FFFFFF"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_alignParentStart="true" />

<ImageView
    android:id="@+id/dialogCloseButton"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/ic_close"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true" />

</RelativeLayout>

<TextView
android:id="@+id/dialogMessage"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:textColor="#AAAAAA"
android:textSize="14sp"
android:textIsSelectable="true" />

<LinearLayout
android:id="@+id/defaultApiKeyLayout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_marginTop="16dp">

<TextView
    android:id="@+id/defapikeyhead"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Default API Key:"
    android:textColor="#FFFFFF"
    android:textSize="14sp"
    android:layout_marginBottom="8dp" />

<TextView
    android:id="@+id/defaultApiKeyText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2C3949"
    android:padding="8dp"
    android:textColor="#80CBC4"
    android:textSize="12sp"
    android:textIsSelectable="true" />
</LinearLayout>
    </LinearLayout>